{
    "user": {
        "controller": "UsersController",
        "defaultAction": "list",
        "name": "utilisateurs",
        "isDefault": ["moderator"],
        "allowed": ["moderator", "administrator"],
        "actions": {
            "edit": {
                "name": "Edition",
                "title": "Édition d'un utilisateur"
            },
            "add": {
                "name": "Création",
                "title": "Création d'un utilisateur"
            },
            "list": {
                "title": "Utilisateurs"
            },
            "login": {
                "title": "Connexion",
                "allowed": ["guest"]
            },
            "logout": {
                "title": "Déconnexion",
                "allowed": ["guest"]
            }
        }
    },
    "recipe": {
        "controller": "RecipeController",
        "defaultAction": "list",
        "name": "recettes",
        "allowed": ["chef", "administrator"],
        "actions": {
            "edit": {
                "name": "édition",
                "title": "Édition d'une recette",
                "allowed": ["%recipeCreator%", "administrator"]
            },
            "add": {
                "name": "création",
                "title": "Création d'une recette",
                "allowed": ["chef"]
            },
            "list": {
                "title": "Recettes"
            }
        }
    },
    "article": {
        "controller": "ArticleController",
        "defaultAction": "list",
        "name": "articles",
        "isDefault": [],
        "allowed": ["administrator"],
        "actions": {
            "edit": {
                "name": "Édition",
                "title": "Édition d'un article"
            },
            "add": {
                "name": "création",
                "title": "Ajout d'un article"
            },
            "list": {
                "title": "Articles"
            },
            "import": {
                "title": "Importation d'un article"
            },
            "orders": {
                "title": "Commandes"
            }
        }
    },
    "statistics": {
        "controller": "StatisticsController",
        "defaultAction": "show",
        "name": "statistiques",
        "allowed": ["user"],
        "actions": {
            "show": {
                "title": "Statistiques"
            }
        }
    },
    "error": {
        "controller": "ErrorController",
        "defaultAction": "404",
        "name": "erreur",
        "allowed": ["guest"],
        "actions": {
            "401": {
                "title": "Droits insuffisants."
            },
            "404": {
                "title": "Cette page n'existe pas"
            }
        }
    },
    "api": {
        "controller": "ApiController",
        "allowed": ["%hasApiToken%"],
        "forwardGuestsToLogin": false,
        "defaultAction": "obtain",
        "name": "API",
        "actions": {
            "obtain": {
                "title": "Demande d'un nouveau jeton.",
                "allowed": ["guest"]
            }
        }
    },
    "ajax": {
        "controller": "AjaxController",
        "allowed": ["%hasCsrfToken%"],
        "forwardGuestsToLogin": false
    }
}