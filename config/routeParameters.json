{
    "user": {
        "controller"    : "UsersController",
        "defaultAction" : "list",
        "name": "utilisateurs",
        "isDefault": ["moderator"],
        "allowed": [ "moderator", "administrator" ],
        "actions": {
            "edit": {
                "name": "édition",
                "title": "Édition d'un utilisateur"
            },
            "add": {
                "name": "création",
                "title": "Création d'un utilisateur"
            },
            "list": {
                "title": "Utilisateurs"
            },
            "login": {
                "title": "Connexion",
                "allowed": [ "guest" ]
            }
        }
    },
    "recipe": {
        "controller"    : "RecipeController",
        "defaultAction" : "list",
        "name": "recettes",
        "isDefault": ["chef", "administrator"],
        "allowed": [ "chef", "administrator" ],
        "actions": {
            "edit": {
                "name": "édition",
                "title": "Édition d'une recette",
                "allowed": [ "%recipeCreator%", "administrator" ]
            },
            "add": {
                "name": "création",
                "title": "Création d'une recette",
                "allowed": [ "chef" ]
            },
            "list": {
                "title": "Recettes"
            }
        }
    },
    "article": {
        "controller"    : "ArticleController",
        "defaultAction" : "list",
        "name": "articles",
        "isDefault": [],
        "allowed": ["administrator"],
        "actions": {
            "edit": { "name": "édition" },
            "add": { "name": "création" }
        }
    },
    "statistics": {
        "controller"    : "StatisticsController",
        "defaultAction" : "show",
        "name": "statistiques",
        "allowed": ["all"],
        "actions": {
            "show": {
                "title": "Statistiques"
            }
        }
    },
    "error": {
        "controller"    : "ErrorController",
        "defaultAction" : "404",
        "name": "erreur",
        "allowed": ["all"],
        "actions": {
            "401": {
                "title": "Droits insuffisants."
            },
            "404": {
                "title": "Cette page n'existe pas"
            }
        }
    },
    "api": {
        "controller"    : "ApiController",
        "allowed": ["guest"]
    }
}