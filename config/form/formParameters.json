{
    "Users": {
        "firstName": {
            "options": {
                "label": "Prénom"
            },
            "validators": ["notEmpty", "name"]
        },
        "lastName": {
            "options": {
                "label": "Nom"
            },
            "validators": ["notEmpty", "name"]
        },
        "tel": {
            "options": {
                "label": "Numéro de téléphone"
            },
            "validators": ["telephone"]
        },
        "email": {
            "options": {
                "icon": "fas fa-envelope-open",
                "label": "Email"
            },
            "validators": ["email", "unique", "notEmpty"]
        },
        "login": {
            "options": {
                "icon": "far fa-user",
                "label": "Identifiant"
            },
            "validators": ["unique", "notEmpty", "lettersAndHyphen"]
        },
        "address1": {
            "options": {
                "label": "Addresse (ligne 1)"
            },
            "validators": ["address"]
        },
        "address2": {
            "options": {
                "label": "Addresse (ligne 2)"
            },
            "validators": ["address"]
        },
        "password": {
            "options": {
                "icon": "fas fa-lock",
                "label": "Mot de passe",
                "type": "password",
                "template": "indicatedPasswordFormRow"
            },
            "validators": ["strong", "oneLetter", "oneNumber", "notEmpty"]
        },
        "newPassword": {
            "options": {
                "icon": "fas fa-lock",
                "label": "Mot de passe",
                "type": "password",
                "mode": "optional",
                "template": "indicatedPasswordFormRow"
            },
            "validators": ["strong", "oneLetter", "oneNumber", "notEmpty"]
        },
        "newPasswordConfirm": {
            "options": {
                "icon": "fas fa-lock",
                "label": "Confirmation du mot de passe",
                "type": "password",
                "value": ""
            },
            "validators": ["matchesField(newPassword)"]
        },
        "roles": {
            "options": {
                "label": "Rôle",
                "type": "checkbox",
                "template": "checkboxFormRow",
                "choices": ["moderator", "administrator", "chef"]
            },
            "validators": ["isRole"]
        },
        "flag": {
            "options": {
                "label": "État",
                "type": "radio",
                "template": "checkboxFormRow",
                "choices": ["a", "w", "b"]
            },
            "validators": ["isFlag"]
        }
    },
    "City": {
        "zipCode": {
            "options": {
                "label": "Code postal"
            },
            "validators": ["isFrenchZipcode"]
        },
        "name": {
            "options": {
                "label": "Ville"
            },
            "validators": ["name"]
        }
    },
    "Recipe": {
        "name": {
            "options": {
                "label": "Nom de la recette"
            },
            "validators": ["notEmpty"]
        },
        "difficulty": {
            "options": {
                "label": "Difficulté (note sur 5)"
            },
            "validators": ["notEmpty", "betweenZeroAndFive"]
        },
        "portions": {
            "options": {
                "label": "Nombre de personnes"
            },
            "validators": ["notEmpty"]
        },
        "preparationTime": {
            "options": {
                "label": "Temps de préparation en minutes"
            },
            "validators": ["notEmpty"]
        },
        "image": {
            "options": {
                "type": "%image%",
                "placeHolder": "images/content/__placeHolder.jpg"
            }
        }
    },
    "Article": {
        "displayName": {
            "options": {
                "label": "Nom de l'article pour l'utilisateur"
            },
            "validators": ["notEmpty"]
        },
        "factoryName": {
            "options": {
                "label": "Nom d'usine de l'article",
                "readOnly": true
            }
        },
        "idArticle": {
            "options": {
                "label": "Identifiant",
                "readOnly": true
            }
        },
        "sellingPrice": {
            "options": {
                "label": "Prix de vente",
                "readOnly": true
            }
        },
        "stock": {
            "options": {
                "label": "Stock",
                "readOnly": true
            }
        },
        "image": {
            "options": {
                "type": "%image%",
                "placeHolder": "images/content/__placeHolder.jpg"
            }
        }
    },
    "ApiElement": {
        "name": {
            "options": {
                "label": "Nom de votre application"
            },
            "validators": ["notEmpty", "unique"]
        }
    },
    "*": {
        "csrf": {
            "options": {
                "type": "%csrf%",
                "template": "inputOnly",
                "inputName": "csrf_token"
            },
            "validators": ["isCsrf"]
        },
        "csvFile": {
            "options": {
                "type": "file",
                "accept": ".csv",
                "label": "Choisir un fichier CSV à importer",
                "inputName": "import_file"
            }
        }
    }
}