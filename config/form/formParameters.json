{
    "Users": {
        "firstName": {
            "options": {
                "label": "Prénom"
            },
            "validators": ["notEmpty", "letters"]
        },
        "lastName": {
            "options": {
                "label": "Nom"
            },
            "validators": ["notEmpty", "letters"]
        },
        "tel": {
            "options": {
                "label": "Numéro de téléphone"
            },
            "validators": ["telephone"]
        },
        "email": {
            "options": {
                "icon": "fas fa-envelope-open",
                "label": "Email"
            },
            "validators": ["email", "unique", "notEmpty"]
        },
        "login": {
            "options": {
                "icon": "far fa-user",
                "label": "Identifiant"
            },
            "validators": ["unique", "notEmpty"]
        },
        "address1": {
            "options": {
                "label": "Addresse (ligne 1)"
            },
            "validators": ["email", "unique"]
        },
        "address2": {
            "options": {
                "label": "Addresse (ligne 2)"
            },
            "validators": ["email", "unique"]
        },
        "zipcode": {
            "options": {
                "label": "Code postal"
            },
            "validators": ["email", "unique"]
        },
        "ville": {
            "options": {
                "label": "Ville",
                "type": ":entityList:City"
            },
            "validators": ["exists"]
        },
        "password": {
            "options": {
                "label": "Mot de passe",
                "type": "password",
                "template": "indicatedPasswordFormRow"
            },
            "validators": ["strong", "oneLetter", "oneNumber", "notEmpty"]
        },
        "passwordConfirm": {
            "options": {
                "label": "Confirmation du mot de passe",
                "type": "password",
                "value": ""
            },
            "validators": ["matchesField(password)"]
        },
        "roles": {
            "options": {
                "label": "Rôle",
                "type": "checkbox",
                "template": "checkboxFormRow",
                "choices": ["moderator", "administrator", "chef"]
            },
            "validators": ["isRole"]
        },
        "flag": {
            "options": {
                "label": "État",
                "type": "radio",
                "template": "checkboxFormRow",
                "choices": ["a", "w", "b"]
            },
            "validators": ["isFlag"]
        }
    },
    "Recipe": {
        "name": {
            "options": {
                "label": "Nom de la recette"
            },
            "validators": ["notEmpty"]
        },
        "difficulty": {
            "options": {
                "label": "Difficulté (note sur 5)"
            },
            "validators": ["notEmpty", "betweenZeroAndFive"]
        },
        "portions": {
            "options": {
                "label": "Nombre de personnes"
            },
            "validators": ["notEmpty"]
        },
        "preparationTime": {
            "options": {
                "label": "Temps de préparation en minutes"
            },
            "validators": ["notEmpty"]
        },
        "image": {
            "options": {
                "type": "%image%",
                "placeHolder": "images/content/__placeHolder.jpg"
            }
        }
    },
    "Article": {
        "displayName": {
            "options": {
                "label": "Nom de l'article pour l'utilisateur"
            },
            "validators": ["notEmpty"]
        },
        "name": {
            "options": {
                "label": "Nom d'usine de l'article",
                "readOnly": true
            }
        },
        "idArticle": {
            "options": {
                "label": "Identifiant",
                "readOnly": true
            }
        },
        "sellingPrice": {
            "options": {
                "label": "Prix de vente",
                "readOnly": true
            }
        },
        "stock": {
            "options": {
                "label": "Stock",
                "readOnly": true
            }
        },
        "image": {
            "options": {
                "type": "%image%",
                "placeHolder": "images/content/__placeHolder.jpg"
            }
        }

    }
}