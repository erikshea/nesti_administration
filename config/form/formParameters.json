{
    "Users": {
        "firstName": {
            "options": {
                "label": "Prénom"
            },
            "validators": ["notEmpty","letters"]
        },
        "lastName": {
            "options": {
                "label": "Nom"
            },
            "validators": ["notEmpty", "letters"]
        },
        "tel" : {
            "options": {
                "label": "Numéro de téléphone"
                },
            "validators": ["telephone"]
        },
        "email": {
            "options": {
                "label": "Email"
            },
            "validators": ["email", "unique", "notEmpty"]
        },
        "login": {
            "options": {
                "icon": "far fa-user",
                "label": "Identifiant"
            },
            "validators": ["email", "unique", "notEmpty"]
        },
        "address1": {
            "options": {
                "label": "Addresse (ligne 1)"
            },
            "validators": ["email", "unique"]
        },
        "address2": {
            "options": {
                "label": "Addresse (ligne 2)"
            },
            "validators": ["email", "unique"]
        },
        "zipcode": {
            "options": {
                "label": "Code postal"
            },
            "validators": ["email", "unique"]
        },
        "ville": {
            "options": {
                "label": "Ville",
                "type": ":entityList:City"
            },
            "validators": ["exists"]
        },
        "password": {
            "options": {
                "icon": "fas fa-lock",
                "label": "Mot de passe",
                "type": "password"
            },
            "validators": ["strong", "oneLetter", "oneNumber", "notEmpty"]
        }
    },
    "Recipe": {
        "name": {
                "options": {
                "label": "Nom de la recette"
            },
            "validators": ["notEmpty","letters"]
        },
        "difficulty": {
                "options": {
                "label": "Difficulté (note sur 5)"
            },
            "validators": ["notEmpty", "betweenZeroAndFive"]
        },
        "portions" : {
                "options": {
                "label": "Nombre de personnes"
            },
            "validators": ["notEmpty"]
        },
        "preparationTime": {
                "options": {
                "label": "Temps de préparation en minutes"
            },
            "validators": ["notEmpty"]
        },
        "image": {
            "options": {
                "type": "%image%",
                "placeHolder": "images/content/__placeHolder.jpg"
            }
        }
    }
}